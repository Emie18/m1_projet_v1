{% if stage is defined %}

    <div class="fichedetail">
        <button class="croix fichedetailcroix" type="button" onclick="fermerDetails()">✕</button>
        {% for s in stage %}
        <h1>Détails du stage</h1>

        <p> <span>Apprenant : </span>{{ s.apprenant.nom }} {{ s.apprenant.prenom }}  </p>
        <p><span>Groupe :  </span>{{ s.groupe.libelle }}</p>
        </br>
        <p> <span>Titre :  </span>{{ s.titre }}</p>
        <p><span>Description :</span> {{ s.description }}</p>
        </br>
        <p> <span>Date de début :  </span>{{ s.dateDebut|date('d/m/Y') }} - {{ s.dateFin|date('d/m/Y') }} ( Durée :{{nbmois}} mois )</p>
        </br>
        <p><span>Tuteur industriel : </span>{{ s.tuteurStage.nom }} {{ s.tuteurStage.prenom }}</p>
        <p><span>Entreprise : </span>{{ s.entreprise.nom }}</p>
        </br>
        <p><span>Responsable de suivi : </span>{{ s.tuteurIsen.nom }} {{ s.tuteurIsen.prenom }}</p>
        </br>
        <p><span>Commentaire :</span> {{ s.commentaire }}</p>
        <div class="etatvalidation">
        <h3>Etat de validation :</h3>
        <p>Soutenance : {{ s.soutenance.libelle }}</p>
        <p>Rapport : {{s.rapport.libelle}}</p>
        <p>Entreprise : {{ s.evalEntreprise.libelle }}</p>
        <div>
         {% endfor %}

    </div>
{% else %}
    <p>Aucun détail de stage trouvé.</p>
{% endif %}